{
  "name": "ddb-gql-express-poc-1",
  "version": "1.0.0",
  "description": "A small sample project using aws dynamodb with graphql",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "babel:build": "babel src -d dist",
    "serve": "node dist/server/main.js",
    "db:init": "node scripts/setupDB.js",
    "db:prune": "node scripts/tearDownDB.js",
    "format": "prettier --write \"src/**/*.{js,json,graphql}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,graphql}\"",
    "lint": "eslint \"src/**/*.{js,json,graphql}\" --quiet",
    "lint:fix": "eslint \"src/**/*.{js,json,graphql}\" --fix",
    "dev": "nodemon --watch 'src/**/*.*' --watch 'index.js' index.js",
    "docker:up": "docker-compose -p 'dynamodb' up -d --build",
    "docker:start": "docker-compose -p 'dynamodb' start",
    "docker:stop": "docker-compose -p 'dynamodb' stop",
    "docker:down": "docker-compose -p 'dynamodb' down -v"
  },
  "keywords": [
    "dynamodb",
    "aws",
    "express",
    "graphql",
    "apollo",
    "docker"
  ],
  "author": "Akshit",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.154.0",
    "@aws-sdk/lib-dynamodb": "^3.154.0",
    "@graphql-tools/graphql-file-loader": "^7.5.2",
    "@graphql-tools/load": "^7.7.4",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.3",
    "@graphql-tools/schema": "^9.0.1",
    "apollo-server-core": "^3.10.1",
    "apollo-server-express": "^3.10.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.18.0",
    "helmet": "^5.1.1",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/register": "^7.18.9",
    "@faker-js/faker": "^7.5.0",
    "@graphql-eslint/eslint-plugin": "^3.10.7",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1"
  }
}